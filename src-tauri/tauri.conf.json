{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "golutra",
  "version": "0.1.0",
  "identifier": "com.golutra",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev:tauri",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "golutra",
        "label": "main",
        "width": 1400,
        "height": 900,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
